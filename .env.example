# Database (PostgreSQL for production)
# Example: postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public
DATABASE_URL="postgresql://user:password@host:5432/se_repairs?schema=public"
# Optional: explicit Prisma URL used during build
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/se_repairs?schema=public"
# Optional: non-pooling connection string if your provider exposes one
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/se_repairs?schema=public"

# NextAuth
# Generate a strong secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-generated-secret"
# Set to your live URL
NEXTAUTH_URL="https://www.serepairs.com.au"
# Used for metadataBase and client-side navigation
NEXT_PUBLIC_APP_URL="https://www.serepairs.com.au"

# Object Storage (S3-compatible)
S3_BUCKET="your-bucket"
S3_REGION="ap-southeast-2"
# Leave blank for AWS S3; set custom endpoint for R2/B2 etc.
S3_ENDPOINT=""
# Public base URL used to serve uploaded files
S3_PUBLIC_BASE_URL="https://your-bucket.s3.ap-southeast-2.amazonaws.com"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"

# Optional: set object ACL when provider supports it (AWS S3 uses 'public-read'; leave blank for R2/B2)
S3_OBJECT_ACL="public-read"

# Vercel Blob (preferred on Vercel)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."
